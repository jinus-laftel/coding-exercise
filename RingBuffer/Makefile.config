################################################################
# Common Config
################################################################
INCLUDE :=
# CXXFLAGS += -std=c++11

################################################################
# Make Rules
################################################################
%.d.o :
	@echo "Building $< ..."
	@$(CXX) -c -O0 -g $(CXXFLAGS) $(INCLUDE) $< -o $@

%.r.o :
	@echo "Building $< ..."
	@$(CXX) -c -O3 $(CXXFLAGS) $(INCLUDE) $< -o $@

%.d : %.cpp
	@$(CXX) -MM -MT $(<:.cpp=.d.o) $(INCLUDE) $? > $@
	@$(CXX) -MM -MT $(<:.cpp=.r.o) $(INCLUDE) $? >> $@

